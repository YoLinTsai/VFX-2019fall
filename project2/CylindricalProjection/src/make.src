CSRCS = $(wildcard *.cpp)
CHDRS = $(wildcard *.h)
COBJS = $(addsuffix .o, $(basename $(CSRCS)))

TARGET = ../bin/$(EXEC)

CXX  = g++
ECHO = /bin/echo

CFLAGS = -O3 -Wall -std=c++11
CFLAGS = -g -Wall -std=c++11

OPENCV_FLAG = `pkg-config --cflags --libs opencv`

all: $(COBJS)
	@echo "> building -> $(EXEC)..."
	@$(CXX) $(CFLAGS) $(COBJS) -o $(TARGET) $(OPENCV_FLAG)

%.o: %.cpp
	@echo "> compiling: $<"
	@$(CXX) $(CFLAGS) -c -o $@ $< $(OPENCV_FLAG)

clean:
	@rm -f $(COBJS)
	@rm -f $(TARGET)
